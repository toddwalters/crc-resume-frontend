# .editorconfig
# This file is used by the EditorConfig Extension within VSCode IDE in order to enforce editor standards for YAML based CloudFormation files.

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Keeps CloudFormation YAML files standard
[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Keeps javascript files standard
[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Keeps python files standard
[*.py]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
